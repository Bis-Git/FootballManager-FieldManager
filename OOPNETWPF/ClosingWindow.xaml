<Window x:Class="OOPNETWPF.ClosingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:OOPNETWPF.Properties"
        xmlns:local="clr-namespace:OOPNETWPF"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.cwTitle}" Height="120" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.cwText}" VerticalAlignment="Top" TextAlignment="Center"/>
        <Button x:Name="btnYes" Content="{x:Static p:Resources.cwBtnYes}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="76" Click="btnYes_Click" Margin="10,0,0,10" />
        <Button x:Name="btnNo" Content="{x:Static p:Resources.cwBtnNo}" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="76" Click="btnNo_Click" Margin="0,0,10,10"/>

    </Grid>
</Window>
